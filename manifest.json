{
  "name": "Broken Bat Helper",
  "version": "0.1",
  "manifest_version": 3,
  "description": "A helper extension for Broken Bat.",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["https://brokenbat.org/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
