{
  "name": "Broken Bat Helper",
  "version": "0.2",
  "manifest_version": 3,
  "description": "A helper extension for Broken Bat.",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": ["https://brokenbat.org/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://brokenbat.org/player/*"],
      "js": ["player-type.js"],
      "run_at": "document_idle"
    }
  ]
}
